{
  "manifest_version": 3,
  "name": "EmpireRise Helper",
  "version": "1.0.0",
  "description": "Executes approved outreach with human-in-the-loop.",
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "host_permissions": [
    "http://localhost:8787/*",
    "https://www.linkedin.com/*",
    "https://www.instagram.com/*",
    "https://www.facebook.com/*",
    "https://x.com/*",
    "https://www.threads.net/*",
    "https://www.reddit.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html", "default_title": "EmpireRise" },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.instagram.com/*",
        "https://www.facebook.com/*",
        "https://x.com/*",
        "https://www.threads.net/*",
        "https://www.reddit.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
